{% extends "::layout.html.twig" %} 

{% block body %}
    <h2>
      Select the ugliest face
    </h2>
    
      {% for person in list_versus %}
        <div class="col-lg-5"
             style="border-radius: 6px; border: 2px solid black; background-color: #b3b3b3; line-height: 40px; text-align: center; padding-top: 8px;"d
        >
            {% if person.photo is not null %}
                <img style="max-width: 250px;"
    				src="{{ asset(person.photo.webPath) }}"
      				alt="{{ person.photo.alt }}"
    			/> 
            {% endif %} 
            <br />
            {{ person.surname }} {{ person.name }}
        </div>
        {% if not loop.last %}
            <div class="col-lg-2">
                
            </div>
        {% endif %}
      {% endfor %}
     
   

<script> $('#compare').addClass('active')</script>
{% endblock %}


{% block javascripts %}
    <script> $('#compare').addClass('active')</script>
{% endblock %}
